{
  "name": "npm-git-hooks",
  "version": "1.0.0",
  "description": "Git hooks for NPM projects",
  "main": "src/npm-git-hooks.js",
  "bin": {
    "post-checkout": "./bin/post-checkout",
    "post-merge": "./bin/post-merge",
    "post-commit": "./bin/post-commit",
    "pre-commit": "./bin/pre-commit",
    "pre-push": "./bin/pre-push"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "bluebird": "3.4.7",
    "colors": "^1.1.2",
    "shelljs": "^0.7.5"
  },
  "devDependencies": {
    "eslint": "^3.8.0"
  },
  "scripts": {
    "postinstall": "node src/install.js",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ripley511/npm-git-hooks.git"
  },
  "keywords": [
    "NPM",
    "GIT",
    "Hooks"
  ],
  "author": "Ripley511",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ripley511/npm-git-hooks/issues"
  },
  "homepage": "https://github.com/Ripley511/npm-git-hooks#readme",
  "npm-git-hooks": {
    "enabled": true,
    "skip-users": [],
    "restrictions": {
      "fileTypes": [],
      "folders": []
    },
    "post-checkout": [
      "echo post-checkout",
      "echo test"
    ],
    "post-commit": [],
    "post-merge": [],
    "pre-commit": [
      "echo pre-commit"
    ],
    "pre-push": [
      "echo pre-push"
    ]
  }
}
